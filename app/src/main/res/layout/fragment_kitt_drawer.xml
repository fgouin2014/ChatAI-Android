            app:cornerRadius="8dp"
            app:strokeColor="@color/kitt_red"
            app:strokeWidth="2dp"
            android:textColor="@color/kitt_red"
            android:fontFamily="monospace"
            android:textStyle="bold" />

    </LinearLayout>

