<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kitt_black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@color/kitt_dark_red"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â†"
                android:textSize="20sp"
                android:textColor="@color/kitt_red"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/consoleTitleConfig"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="NES CONFIGURATION"
                android:textSize="16sp"
                android:textColor="@color/kitt_red"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- Note informative -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Note: Core selection is managed in EmulatorJS settings menu (during gameplay)"
            android:textSize="11sp"
            android:textColor="@android:color/white"
            android:fontFamily="monospace"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:padding="8dp"
            android:background="@color/kitt_dark_red" />

        <!-- Advanced Settings Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADVANCED SETTINGS"
            android:textSize="14sp"
            android:textColor="@color/kitt_red"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/kitt_dark_red"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Enable Multi-Threading (EJS_threads)"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:fontFamily="monospace"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/threadsSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Improves performance on heavy consoles (N64, PSP). Requires Custom Tabs for SharedArrayBuffer support."
                        android:textSize="10sp"
                        android:textColor="#ff6666"
                        android:fontFamily="monospace"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp" />
                </LinearLayout>

                <!-- PSX D-Pad Option (only visible for PSX) -->
                <LinearLayout
                    android:id="@+id/psxDpadContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="12dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="PSX: Use D-Pad (Digital) instead of Analog Sticks"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:fontFamily="monospace"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/psxDpadSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="OFF: Uses psxcontrol.js with analog sticks (DualShock). ON: Uses psxcontroldpad.js with D-Pad only."
                        android:textSize="10sp"
                        android:textColor="#ff6666"
                        android:fontFamily="monospace"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Custom Tabs Option (for better performance on heavy consoles) -->
                <LinearLayout
                    android:id="@+id/customTabsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Use Chrome Custom Tabs"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:fontFamily="monospace"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/customTabsSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ON: Opens in Chrome browser (better performance, supports threads). OFF: Uses WebView (integrated, no threads support)."
                        android:textSize="10sp"
                        android:textColor="#ff6666"
                        android:fontFamily="monospace"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Virtual Gamepad Preset Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VIRTUAL GAMEPAD PRESET"
            android:textSize="14sp"
            android:textColor="@color/kitt_red"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/kitt_dark_red"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gamepad Layout:"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:fontFamily="monospace"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/presetSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@color/kitt_black"
                    android:padding="8dp"
                    android:popupBackground="@color/kitt_dark_red" />
                    
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Default: Auto-detect | Custom: Full control positioning"
                    android:textSize="10sp"
                    android:textColor="@android:color/darker_gray"
                    android:fontFamily="monospace"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Control Settings Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONTROL SETTINGS"
            android:textSize="14sp"
            android:textColor="@color/kitt_red"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/kitt_dark_red"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Touch Control Scale:"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:fontFamily="monospace"
                    android:layout_marginBottom="8dp" />

                <SeekBar
                    android:id="@+id/touchScaleSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="20"
                    android:progress="10"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/touchScaleValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1.0x"
                    android:textSize="10sp"
                    android:textColor="@color/kitt_red"
                    android:fontFamily="monospace"
                    android:gravity="center"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Touch Control Opacity:"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:fontFamily="monospace"
                    android:layout_marginBottom="8dp" />

                <SeekBar
                    android:id="@+id/touchAlphaSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="10"
                    android:progress="8"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/touchAlphaValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.8"
                    android:textSize="10sp"
                    android:textColor="@color/kitt_red"
                    android:fontFamily="monospace"
                    android:gravity="center" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="SAVE CONFIGURATION"
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:textStyle="bold"
            app:backgroundTint="@color/kitt_red"
            android:textColor="@android:color/black"
            app:cornerRadius="8dp"
            android:layout_marginTop="16dp" />
        
        <!-- Edit HTML Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/editHtmlButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="EDIT EMULATOR.HTML (PRESETS)"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:textStyle="bold"
            app:backgroundTint="@color/kitt_dark_red"
            android:textColor="@color/kitt_red"
            app:cornerRadius="8dp"
            app:strokeColor="@color/kitt_red"
            app:strokeWidth="2dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />
    </LinearLayout>
</ScrollView>

