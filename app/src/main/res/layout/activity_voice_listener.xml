<?xml version="1.0" encoding="utf-8"?>
<!-- Layout transparent immersif pour VoiceListenerActivity -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    tools:context=".activities.VoiceListenerActivity">

    <!-- Indicateur visuel centrÃ© -->
    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="12dp"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center"
            android:background="#DD000000">

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <!-- Ã‰TAT 1: Ã‰COUTE - IcÃ´ne KITT                 -->
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <ImageView
                android:id="@+id/kittIconListening"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_kitt_tile"
                android:contentDescription="KITT Icon"
                android:visibility="visible" />

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <!-- Ã‰TAT 2: RÃ‰FLEXION - Scanner LED Rouge      -->
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <LinearLayout
                android:id="@+id/scannerContainer"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">
                
                <!-- Scanner KITT - 8 LEDs rouges -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    
                    <ImageView android:id="@+id/scanLed1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/led_red_off" />
                    
                    <ImageView android:id="@+id/scanLed2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/led_red_off" />
                    
                    <ImageView android:id="@+id/scanLed3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/led_red_off" />
                    
                    <ImageView android:id="@+id/scanLed4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/led_red_off" />
                    
                    <ImageView android:id="@+id/scanLed5"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/led_red_off" />
                    
                    <ImageView android:id="@+id/scanLed6"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/led_red_off" />
                    
                    <ImageView android:id="@+id/scanLed7"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/led_red_off" />
                    
                    <ImageView android:id="@+id/scanLed8"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/led_red_off" />
                </LinearLayout>
            </LinearLayout>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <!-- Ã‰TAT 3: PAROLE - VU-meter (LEDs vertes)    -->
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <LinearLayout
                android:id="@+id/vuMeterContainer"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:visibility="gone">
                
                <!-- VU-meter gauche (3 LEDs verticales) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp">
                    
                    <ImageView android:id="@+id/vuLeftLed3"
                        android:layout_width="16dp"
                        android:layout_height="24dp"
                        android:layout_marginBottom="2dp"
                        android:src="@drawable/led_green_off" />
                    
                    <ImageView android:id="@+id/vuLeftLed2"
                        android:layout_width="16dp"
                        android:layout_height="24dp"
                        android:layout_marginBottom="2dp"
                        android:src="@drawable/led_green_off" />
                    
                    <ImageView android:id="@+id/vuLeftLed1"
                        android:layout_width="16dp"
                        android:layout_height="24dp"
                        android:src="@drawable/led_green_off" />
                </LinearLayout>
                
                <!-- VU-meter centre (3 LEDs verticales) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp">
                    
                    <ImageView android:id="@+id/vuCenterLed3"
                        android:layout_width="16dp"
                        android:layout_height="24dp"
                        android:layout_marginBottom="2dp"
                        android:src="@drawable/led_green_off" />
                    
                    <ImageView android:id="@+id/vuCenterLed2"
                        android:layout_width="16dp"
                        android:layout_height="24dp"
                        android:layout_marginBottom="2dp"
                        android:src="@drawable/led_green_off" />
                    
                    <ImageView android:id="@+id/vuCenterLed1"
                        android:layout_width="16dp"
                        android:layout_height="24dp"
                        android:src="@drawable/led_green_off" />
                </LinearLayout>
                
                <!-- VU-meter droite (3 LEDs verticales) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    
                    <ImageView android:id="@+id/vuRightLed3"
                        android:layout_width="16dp"
                        android:layout_height="24dp"
                        android:layout_marginBottom="2dp"
                        android:src="@drawable/led_green_off" />
                    
                    <ImageView android:id="@+id/vuRightLed2"
                        android:layout_width="16dp"
                        android:layout_height="24dp"
                        android:layout_marginBottom="2dp"
                        android:src="@drawable/led_green_off" />
                    
                    <ImageView android:id="@+id/vuRightLed1"
                        android:layout_width="16dp"
                        android:layout_height="24dp"
                        android:src="@drawable/led_green_off" />
                </LinearLayout>
            </LinearLayout>

            <!-- Texte de statut -->
            <TextView
                android:id="@+id/voiceStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="ðŸŽ¤ Initialisation..."
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>
