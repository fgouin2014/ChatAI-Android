<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/kitt_dark_red"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    android:layout_marginBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Icon -->
        <TextView
            android:id="@+id/consoleIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ®"
            android:textSize="24sp"
            android:layout_marginEnd="16dp" />

        <!-- Console Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/consoleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NES"
                android:textSize="16sp"
                android:textColor="@color/kitt_red"
                android:fontFamily="monospace"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/consoleFullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nintendo Entertainment System"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:fontFamily="monospace"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/consoleCore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Core: fceumm"
                android:textSize="10sp"
                android:textColor="@color/kitt_red"
                android:fontFamily="monospace"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/consoleGenericBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[AUTO-DETECTED]"
                android:textSize="10sp"
                android:textColor="#FFA500"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/consoleAutoScanBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[AUTO SCAN - No gamelist.json]"
                android:textSize="10sp"
                android:textColor="#00FF00"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Refresh Button -->
        <TextView
            android:id="@+id/refreshButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â†»"
            android:textSize="20sp"
            android:textColor="@color/kitt_blue"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:padding="8dp"
            android:background="@drawable/filter_chip_background"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="8dp" />

        <!-- Edit Button -->
        <TextView
            android:id="@+id/editButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœŽ"
            android:textSize="20sp"
            android:textColor="@color/kitt_red"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:padding="8dp"
            android:background="@drawable/filter_chip_background"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

