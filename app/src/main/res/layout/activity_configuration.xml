                <!-- OpenAI API Key -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:boxStrokeColor="@color/kitt_red"
                    app:hintTextColor="@color/kitt_red_light"
                    android:hint="OpenAI API Key">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/openaiApiKeyInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/kitt_red"
                        android:textSize="12sp"
                        android:fontFamily="monospace"
                        android:inputType="textPassword" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Hugging Face API Key -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/kitt_red"
                    app:hintTextColor="@color/kitt_red_light"
                    android:hint="Hugging Face API Key">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/huggingfaceApiKeyInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/kitt_red"
                        android:textSize="12sp"
                        android:fontFamily="monospace"
                        android:inputType="textPassword" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Section: Configuration des Fichiers -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/kitt_black"
            app:cardCornerRadius="12dp"
            app:strokeColor="@color/kitt_red"
