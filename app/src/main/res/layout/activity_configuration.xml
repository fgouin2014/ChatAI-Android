<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kitt_black"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:spacing="16dp">

        <!-- Header -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/kitt_dark_red"
            app:cardCornerRadius="12dp"
            app:strokeColor="@color/kitt_red"
            app:strokeWidth="2dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âš™ï¸ CENTRE DE CONFIGURATION"
                    android:textColor="@color/kitt_red"
                    android:textSize="18sp"
                    android:fontFamily="monospace"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Configuration complÃ¨te de ChatAI-Android"
                    android:textColor="@color/kitt_red_light"
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:gravity="center"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Section: Configuration des Serveurs -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/kitt_black"
            app:cardCornerRadius="12dp"
            app:strokeColor="@color/kitt_red"
            app:strokeWidth="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸŒ CONFIGURATION DES SERVEURS"
                    android:textColor="@color/kitt_red"
                    android:textSize="14sp"
                    android:fontFamily="monospace"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- HTTP Server Port -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:boxStrokeColor="@color/kitt_red"
                    app:hintTextColor="@color/kitt_red_light"
                    android:hint="Port HTTP Server">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/httpPortInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/kitt_red"
                        android:textSize="12sp"
                        android:fontFamily="monospace"
                        android:inputType="number" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- WebSocket Server Port -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:boxStrokeColor="@color/kitt_red"
                    app:hintTextColor="@color/kitt_red_light"
                    android:hint="Port WebSocket Server">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/wsPortInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/kitt_red"
                        android:textSize="12sp"
                        android:fontFamily="monospace"
                        android:inputType="number" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- File Server Port -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/kitt_red"
                    app:hintTextColor="@color/kitt_red_light"
                    android:hint="Port File Server">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/filePortInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/kitt_red"
                        android:textSize="12sp"
                        android:fontFamily="monospace"
                        android:inputType="number" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Section: Configuration des APIs -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/kitt_black"
            app:cardCornerRadius="12dp"
