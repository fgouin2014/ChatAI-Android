<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/kitt_black">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modifier ai_config.json"
        android:textColor="@color/kitt_red"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Attention: Modifications directes du fichier JSON. Validez la syntaxe avant de sauvegarder."
        android:textColor="@color/kitt_red_light"
        android:textSize="12sp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:layout_marginBottom="12dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="Contenu JSON"
        app:hintTextColor="@color/kitt_red"
        app:boxStrokeColor="@color/kitt_red"
        app:boxBackgroundColor="@color/dark_gray_medium"
        android:layout_marginBottom="16dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/jsonEditor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textMultiLine|textNoSuggestions"
            android:fontFamily="monospace"
            android:textColor="@color/kitt_red"
            android:textColorHint="@color/kitt_red_light"
            android:textSize="12sp"
            android:gravity="top|start"
            android:scrollbars="vertical"
            android:minLines="15"
            android:maxLines="30" />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Annuler"
            android:textColor="@color/kitt_red"
            app:strokeColor="@color/kitt_red"
            app:strokeWidth="1dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnValidate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valider JSON"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/kitt_red"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sauvegarder"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/kitt_dark_red" />

    </LinearLayout>

</LinearLayout>
