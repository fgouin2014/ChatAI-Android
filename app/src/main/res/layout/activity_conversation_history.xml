<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kitt_black"
    android:orientation="vertical">

    <!-- Header -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/kitt_dark_red"
        app:cardCornerRadius="0dp"
        app:strokeColor="@color/kitt_red"
        app:strokeWidth="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“œ HISTORIQUE DES CONVERSATIONS"
                android:textColor="@color/kitt_red"
                android:textSize="18sp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Toutes vos conversations avec KITT et GLaDOS"
                android:textColor="@color/kitt_red_light"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:gravity="center"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Statistiques -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/kitt_black"
        app:cardCornerRadius="8dp"
        app:strokeColor="@color/kitt_red"
        app:strokeWidth="1dp">

        <TextView
            android:id="@+id/statsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Chargement des statistiques..."
            android:textColor="@color/kitt_red"
            android:textSize="11sp"
            android:fontFamily="monospace" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Liste des conversations -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/conversationsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false" />

    <!-- Vue vide (si aucune conversation) -->
    <TextView
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Aucune conversation enregistrÃ©e\n\nParlez Ã  KITT pour commencer !"
        android:textColor="@color/kitt_red_light"
        android:textSize="14sp"
        android:fontFamily="monospace"
        android:visibility="gone" />

    <!-- Boutons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/backButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="RETOUR"
            android:textSize="11sp"
            app:backgroundTint="@color/kitt_red"
            app:cornerRadius="8dp"
            android:textColor="@color/kitt_black"
            android:fontFamily="monospace"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/exportButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="EXPORT"
            android:textSize="11sp"
            app:backgroundTint="@color/kitt_dark_red"
            app:cornerRadius="8dp"
            android:textColor="@color/kitt_red"
            android:fontFamily="monospace"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/clearAllButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="EFFACER"
            android:textSize="11sp"
            app:backgroundTint="@color/dark_gray_medium"
            app:cornerRadius="8dp"
            android:textColor="@color/dark_white"
            android:fontFamily="monospace"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>

