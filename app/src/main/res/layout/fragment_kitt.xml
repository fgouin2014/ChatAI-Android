<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kitt_black"
    android:fillViewport="true"
    android:scrollbars="none"
    android:overScrollMode="never"
    android:fadingEdge="none"
    tools:context=".fragments.KittFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:paddingBottom="0dp">

        <!-- Back to Chat Button -->

        <!-- Status Text -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/statusCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:cardBackgroundColor="@color/kitt_red_alpha"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:strokeColor="@color/kitt_red"
            app:strokeWidth="1dp"
            tools:layout_editor_absoluteY="88dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/statusText"
                style="@style/Widget.Kitt.StatusText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="@string/kitt_status_standby" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Horizontal Scanner (KITT Eye) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/scannerCard"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/statusCard"
            app:strokeColor="@color/kitt_red"
            app:strokeWidth="3dp">

            <LinearLayout
                android:id="@+id/scannerRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp" />

        </com.google.android.material.card.MaterialCardView>

        <!-- VU Meter Container -->
        <LinearLayout
            android:id="@+id/vuMeterContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scannerCard">

            <!-- Left VU Bar Menu-->

            <LinearLayout
                android:id="@+id/leftVuBarMenu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="12dp"
                android:background="@drawable/kitt_vu_bar_background"
                android:gravity="top"
                android:orientation="vertical"
                android:padding="8dp" >

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/statusBarIndicatorRDY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/kitt_status_background"
                    android:fontFamily="monospace"
                    android:padding="4dp"
                    android:text="@string/status_indicator_rdy"
                    android:textColor="@color/kitt_red_dark"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/statusBarIndicatorBSY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/kitt_status_background"
                    android:fontFamily="monospace"
                    android:padding="4dp"
                    android:text="@string/status_indicator_bsy"
                    android:textColor="@color/kitt_red_dark"
                    android:textSize="12sp"
                    android:textStyle="bold" 
                    android:layout_marginBottom="6dp" />
                

            </LinearLayout>
            <!-- Left VU Bar -->
            <LinearLayout
                android:id="@+id/leftVuBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@drawable/kitt_vu_bar_background"
                android:orientation="vertical"
                android:padding="8dp" />

            <!-- Center VU Bar -->
            <LinearLayout
                android:id="@+id/centerVuBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:background="@drawable/kitt_vu_bar_background"
                android:orientation="vertical"
                android:padding="8dp" />

            <!-- Right VU Bar -->
            <LinearLayout
                android:id="@+id/rightVuBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:background="@drawable/kitt_vu_bar_background"
                android:orientation="vertical"
                android:padding="8dp" />

            <!-- Right VU Bar Menu -->
            <LinearLayout
                android:id="@+id/rightVuBarMenu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:background="@drawable/kitt_vu_bar_background"
                android:gravity="top"
                android:orientation="vertical"
                android:padding="8dp" >

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/statusBarIndicatorNET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/kitt_status_background"
                android:fontFamily="monospace"
                android:padding="4dp"
                android:text="@string/status_indicator_net"
                android:textColor="@color/kitt_red_dark"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="6dp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/statusBarIndicatorMSQ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/kitt_status_background"
                android:fontFamily="monospace"
                android:padding="4dp"
                android:text="@string/status_indicator_msq"
                android:textColor="@color/kitt_red_dark"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="6dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Controls Section -->
        <LinearLayout
            android:id="@+id/controlsContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vuMeterContainer">

            <!-- Text Input Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:boxStrokeColor="@color/kitt_red"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:hintTextColor="@color/kitt_red"
                    app:startIconDrawable="@drawable/ic_message_24"
                    app:startIconTint="@color/kitt_red">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:hint="@string/kitt_input_hint"
                        android:inputType="text"
                        android:textColor="@color/kitt_red"
                        android:textColorHint="@color/kitt_red_alpha" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/sendButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/kitt_button_ok"
                    app:backgroundTint="@color/kitt_red_alpha"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_send_24"
                    app:iconTint="@color/kitt_red"
                    app:strokeColor="@color/kitt_red"
                    app:strokeWidth="2dp"
                    android:textColor="@color/kitt_red" />

            </LinearLayout>

            <!-- Controls Grid - Exactement comme kitt.html -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Power Switch - Column 1 (span 2 rows) -->
                <LinearLayout
                    android:id="@+id/powerSwitchContainer"
                    android:layout_width="80dp"
                    android:layout_height="160dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/kitt_switch_background"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="@string/kitt_power_label"
                        android:textColor="@color/kitt_red"
                        android:textSize="8sp"
                        android:textStyle="bold" />

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/powerSwitch"
                        style="@style/Widget.Kitt.Switch"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="8dp"
                        android:checked="false"
                      />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/switchStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/kitt_status_background"
                        android:fontFamily="monospace"
                        android:padding="2dp"
                        android:text="@string/kitt_status_stby"
                        android:textColor="@color/kitt_red"
                        android:textSize="7sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Right side - 2 rows of 3 buttons each -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Row 1: 3 buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal"
                        android:weightSum="2">


                        <!-- AI Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/aiButton"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="4dp"
                            android:layout_weight="1"
                            android:enabled="false"
                            android:text="AI"
                            android:textSize="10sp"
                            app:backgroundTint="@color/kitt_red_alpha"
                            app:cornerRadius="8dp"
                            app:strokeColor="@color/kitt_red"
                            app:strokeWidth="2dp"
                            android:textColor="@color/kitt_red"
                            android:fontFamily="monospace"
                            android:textStyle="bold" />

                        <!-- Think Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/thinkButton"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="4dp"
                            android:layout_weight="1"
                            android:enabled="false"
                            android:text="RÉFLÉCHIR"
                            android:textSize="10sp"
                            app:backgroundTint="@color/kitt_red_alpha"
                            app:cornerRadius="8dp"
                            app:strokeColor="@color/kitt_red"
                            app:strokeWidth="2dp"
                            android:textColor="@color/kitt_red"
                            android:fontFamily="monospace"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <!-- Row 2: 3 buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <!-- Reset Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/resetButton"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="4dp"
                            android:layout_weight="1"
                            android:enabled="false"
                            android:text="RESET"
                            android:textSize="10sp"
                            app:backgroundTint="@color/kitt_red_alpha"
                            app:cornerRadius="8dp"
                            app:strokeColor="@color/kitt_red"
                            app:strokeWidth="2dp"
                            android:textColor="@color/kitt_red"
                            android:fontFamily="monospace"
                            android:textStyle="bold" />

                        <!-- VU-Meter Mode Toggle Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/vuModeButton"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="4dp"
                            android:layout_weight="1"
                            android:enabled="false"
                            android:text="VU-VOIX"
                            android:textSize="9sp"
                            app:backgroundTint="@color/kitt_red_alpha"
                            app:cornerRadius="8dp"
                            app:strokeColor="@color/kitt_red"
                            app:strokeWidth="2dp"
                            android:textColor="@color/kitt_red"
                            android:fontFamily="monospace"
                            android:textStyle="bold" />

                        <!-- Menu Drawer Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/menuDrawerButton"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="4dp"
                            android:layout_weight="1"
                            android:enabled="false"
                            android:text="MENU"
                            android:textSize="10sp"
                            app:backgroundTint="@color/kitt_red_alpha"
                            app:cornerRadius="8dp"
                            app:strokeColor="@color/kitt_red"
                            app:strokeWidth="2dp"
                            android:textColor="@color/kitt_red"
                            android:fontFamily="monospace"
                            android:textStyle="bold" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Ligne de scan KITT -->
        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/scanLineView"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:background="@drawable/kitt_scan_line"
            android:alpha="0"
            android:visibility="gone"
            app:dividerColor="@color/kitt_red"
            app:dividerThickness="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
