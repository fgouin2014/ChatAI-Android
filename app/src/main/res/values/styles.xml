<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Game Library specific styles only -->

    <!-- Toolbar Title Style -->
    <style name="ToolbarTitleStyle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/kitt_red</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Game Card Style -->
    <style name="GameCardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="strokeColor">@color/kitt_red</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardBackgroundColor">@color/kitt_medium_red</item>
    </style>

    <!-- Button Styles -->
    <style name="GameButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/kitt_black</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/kitt_red</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!-- Text Input Style -->
    <style name="GameTextInputStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/kitt_black</item>
        <item name="boxStrokeColor">@color/kitt_red</item>
        <item name="hintTextColor">@color/kitt_red_light</item>
        <item name="android:textColor">@color/kitt_red</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <!-- Chip Style -->
    <style name="GameChipStyle" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/kitt_medium_red</item>
        <item name="chipStrokeColor">@color/kitt_red</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/kitt_red</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <!-- Floating Action Button Style -->
    <style name="GameFabStyle" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/kitt_red</item>
        <item name="tint">@color/kitt_black</item>
        <item name="elevation">8dp</item>
    </style>

    <!-- Animation Styles -->
    <style name="GameCardEnterAnimation">
        <item name="android:duration">300</item>
        <item name="android:interpolator">@android:anim/accelerate_decelerate_interpolator</item>
    </style>

    <style name="GameCardExitAnimation">
        <item name="android:duration">200</item>
        <item name="android:interpolator">@android:anim/accelerate_interpolator</item>
    </style>

    <!-- Fullscreen Theme -->
    <style name="Theme.ChatAI.Fullscreen" parent="Theme.ChatAI">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <!-- Emulator Theme with PromptFont for gamepad button symbols -->
    <style name="Theme.ChatAI.Emulator" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:fontFamily">@font/promptfont</item>
        <item name="fontFamily">@font/promptfont</item>
    </style>

    <!-- Collapsing Toolbar Styles -->
    <style name="ExpandedTitleStyle" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/kitt_red</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/kitt_black</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="CollapsedTitleStyle" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/kitt_red</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
