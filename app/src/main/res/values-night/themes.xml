<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme with Material 3 Dark -->
    <style name="Base.Theme.ChatAI" parent="Theme.Material3.DayNight">
