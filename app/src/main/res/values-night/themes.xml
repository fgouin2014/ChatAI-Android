        <!-- Keep KITT Red for LEDs and accents -->
        <item name="colorPrimaryVariant">@color/kitt_red</item>
        <item name="colorSecondaryVariant">@color/kitt_red</item>
    </style>

    <style name="Theme.KITT.Amber" parent="Base.Theme.KITT.Amber" />
</resources>